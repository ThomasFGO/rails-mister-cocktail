<div class="container">
  <h1 class="text-center">Your cocktail list</h1>

  <div class="text-center padded">
    <%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-primary" %>
  </div>




  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="card-body">
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </div>
    <% end %>
  </div>
</div>
